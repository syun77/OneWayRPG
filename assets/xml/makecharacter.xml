<?xml version="1.0" encoding="utf-8" ?>
<data>
  <!-- ■共通定義読み込み -->
  <include id="_ui_globals"/>
  
  <!-- タイトル -->
  <text id="txttitle" use_def="pixelmplus10" center_x="true" y="8" text="職業を選んでください" width="100%" size="10" />
  
  <!-- ■職業ボタン -->
  <button id="item0" label="職業0" x="16" y="48" width="64"><text use_def="pixelmplus10" /><param type="string" value="0" /></button>
  <button id="item1" label="職業1" x="item0.x" y="item0.bottom" width="64"><text use_def="pixelmplus10" /><param type="string" value="1" /></button>
  <button id="item2" label="職業2" x="item0.x" y="item1.bottom" width="64"><text use_def="pixelmplus10" /><param type="string" value="2" /></button>

  <!-- ■職業説明 -->
  <!-- ・概要 -->
  <chrome id="sprframe" use_def="frame" x="item0.right+16" y="item0.y-8" width="280" height="180" />
  <text id="txtdetail" use_def="pixelmplus10" text="職業説明" x="sprframe.x+16" y="sprframe.y+8" width="180" align="left" />
  
  <!-- ・ステータス -->
  <chrome id="sprstatus" use_def="frame" x="sprframe.x+16" y="sprframe.y+32" width="64" height="80" />
  <text id="txthp"  use_def="normal" x="sprstatus.x+16" y="sprstatus.y+4" text="HP: 10" />
  <text id="txtvit" use_def="normal" x="txthp.x" y="txthp.bottom" text="VIT: 0" />
  <text id="txtdex" use_def="normal" x="txthp.x" y="txtvit.bottom" text="DEX: 0" />
  <text id="txtagi" use_def="normal" x="txthp.x" y="txtdex.bottom" text="AGI: 0" />
  
  <!-- ・アイテム -->
  <chrome id="spritem" use_def="frame" x="sprstatus.right+16" y="sprstatus.y" width="96" height="80" />
  <text id="txtitem0" use_def="pixelmplus10" x="spritem.x-8" y="spritem.y+4" text="アイテム0" />
  <text id="txtitem1" use_def="pixelmplus10" x="txtitem0.x" y="txtitem0.bottom" text="アイテム1" />
  <text id="txtitem2" use_def="pixelmplus10" x="txtitem0.x" y="txtitem1.bottom" text="アイテム2" />
  <text id="txtitem3" use_def="pixelmplus10" x="txtitem0.x" y="txtitem2.bottom" text="アイテム3" />
  <text id="txtitem4" use_def="pixelmplus10" x="txtitem0.x" y="txtitem3.bottom" text="アイテム4" />
  <text id="txtitem5" use_def="pixelmplus10" x="txtitem0.x" y="txtitem4.bottom" text="アイテム5" />
  
  <!-- ・スキル -->
  <chrome id="sprskill" use_def="frame" x="sprstatus.x" y="sprstatus.bottom+8" width="96" height="24" />
  <text id="txtskill" use_def="pixelmplus10" x="sprskill.x-8" y="sprskill.y+4" text="スキル" />
</data>

